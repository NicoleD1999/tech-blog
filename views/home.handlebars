{{!-- Cards for posts --}}

{{#each posts}}
<div class="card post-card" style="width: 18rem;">
     <div class="card-header post-title">
    {{title}}
  </div>
  <div class="card-body">
    <a href="/{{id}}">View Post</a>
  </div>
</div>
{{/each}}

